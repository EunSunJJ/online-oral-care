<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.sunny.onlineoralcare.user.repository.UserRepository">

	<!-- 아이디 찾기 -->
	<select id="selectUserByNameAndEmail" parameterType="map" resultType="com.sunny.onlineoralcare.user.domain.User">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `name`
			, `phoneNumber`
			, `birthday`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`name` = #{name}
			AND `email` = #{email}
	</select>
	
	<!-- 내 정보 수정하기 - 비밀번호 일치여부 확인하고 비밀번호 변경화면으로 이동 -->
	<select id="selectUserByPassword" parameterType="map" resultType="com.sunny.onlineoralcare.user.domain.User">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `name`
			, `phoneNumber`
			, `birthday`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{id}
			AND `password` = #{password}
	</select>
	
	<!-- 내 정보 수정하기 -->
	<update id="updateMyInfo" parameterType="map">
		UPDATE
			`user`
		SET
			`name` = #{name}
			, `phoneNumber` = #{phoneNumber}
			, `birthday` = #{birthday}
			, `email` = #{email}
			, `updatedAt` = now()
		WHERE
			`id` = #{id}
	</update>

	<!-- 내 정보 불러오기 -->
	<select id="selectUserByloginId" parameterType="String" resultType="com.sunny.onlineoralcare.user.domain.User">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `name`
			, `phoneNumber`
			, `birthday`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<!-- 로그인 -->
	<select id="selectUserByloginIdAndPassword" parameterType="map"
		resultType="com.sunny.onlineoralcare.user.domain.User">
		SELECT
		`id`
		,`loginId`
		, `password`
		, `name`
		, `phoneNumber`
		, `birthday`
		, `email`
		, `createdAt`
		, `updatedAt`
		
		FROM
		`user`
		
		WHERE
		`loginId` = #{loginId}
		AND `password` = #{password}
	</select>

	<!-- 아이디 중복 확인 -->
	<select id="countDuplicateId" resultType="int"
		parameterType="String">
		SELECT
		count(1)
		
		FROM
		`user`
		
		WHERE
		`loginId` = #{loginId}
	</select>

	<!-- 회원가입 - 가입정보 저장 -->
	<insert id="insertUser" parameterType="map">
		INSERT INTO
		`user`
		(
		`loginId`
		, `password`
		, `name`
		, `phoneNumber`
		, `birthday`
		, `email`
		)
		
		VALUE
		(
		#{loginId}
		, #{password}
		, #{name}
		, #{phoneNumber}
		, #{birthday}
		, #{email}
		)
	</insert>
</mapper>
  